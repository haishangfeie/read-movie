/* pages/movies/movies.wxss */
page {
  background-color: #f2f2f2;
}
.search-wrap {
  position: relative;
  display: flex;
  height: 40px;

  align-items: center;
}
.search-icon {
  flex: 0 0 13px;
  margin: 0 52rpx 0 20rpx;
  width: 13px;
  height: 13px;
}
.search-inp {
  flex: 1;
  font-size: 12px;
}
.close-del-wrap {
  position: absolute;
  right: 0;
  z-index: 2;
  display: flex;
  padding: 10rpx 30rpx;

  align-items: center;
}
.close-del-wrap .delInput {
  width: 30rpx;
  height: 30rpx;
}
.my-movies-wrap {
  margin-bottom: 15px;
}
.my-movies-wrap:last-of-type {
  margin-bottom: 0;
}
.search-res-wrap {
  position: fixed;
  top: 40px;
  bottom: 0;
  display: flex;
  width: 100%;
  background-color: #fff;

  flex-wrap: wrap;
}
.scroll-view {
  padding-top: 15px;
  height: 100%;
}
.search-res-wrap .my-movie-card {
  display: inline-block;
  margin-bottom: 25px;
  margin-left: 38rpx;
}
.search-res-wrap .line-wrap {
  position: relative;
  margin: 0 auto 30px;
  width: 700rpx;
  text-align: center;
}
.search-res-wrap .line-wrap .line-text {
  padding: 0 20rpx;
  background: #fff;
  color: #999;
  font-size: 12px;
}
.search-res-wrap .line-wrap .line {
  position: absolute;
  top: 50%;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
}
