/* pages/movies/movies.wxss */
page {
  background-color: #f2f2f2;
}
.search-wrap {
  display: flex;
  margin-bottom: 18px;
  height: 40px;

  align-items: center;
}
.search-icon {
  flex: 0 0 13px;
  margin: 0 52rpx 0 20rpx;
  width: 13px;
  height: 13px;
}
.search-inp {
  flex: 1;
  padding-left: 10rpx;
}
.search-inp-place {
  font-size: 12px;
}
.title-wrap {
  margin-bottom: 17px;
  height: 10px;
  line-height: 10px;
}
.title-wrap .title {
  margin-left: 20rpx;
  color: #666;
  font-size: 10px;
}
.more {
  float: right;
  margin-right: 10px;
  color: #1f4ba5;
  font-size: 20rpx;
}
