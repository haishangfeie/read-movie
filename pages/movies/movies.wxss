/* pages/movies/movies.wxss */
page {
  background-color: #f2f2f2;
}
.search-wrap {
  display: flex;
  height: 40px;

  align-items: center;
}
.search-icon {
  flex: 0 0 13px;
  margin: 0 52rpx 0 20rpx;
  width: 13px;
  height: 13px;
}
.search-inp {
  flex: 1;
  font-size: 12px;
}
.my-movies-wrap {
  margin-bottom: 15px;
}
.my-movies-wrap:last-of-type {
  margin-bottom: 0;
}
.search-res-wrap {
  position: fixed;
  top: 40px;
  bottom: 0;
  display: flex;
  width: 100%;
  background-color: #fff;

  flex-wrap: wrap;
}
.scroll-view {
  padding-top: 15px;
  height: 100%;
}
.search-res-wrap .my-movie-card {
  display: inline-block;
  margin-bottom: 25px;
  margin-left: 38rpx;
}
