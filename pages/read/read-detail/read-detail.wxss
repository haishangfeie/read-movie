/* pages/read/read-detail/read-detail.wxss */
.cover-wrap {
  position: relative;
}
.cover-wrap .cover {
  width: 100%;
  height: 450rpx;
}
.music-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -27px;
  margin-left: -25px;
  width: 51px;
  height: 55px;
  opacity: .7;
}
.avatar-date {
  display: flex;
  margin-top: 12px;
  margin-bottom: 16px;
  height: 58rpx;
  font-weight: 700;

  align-items: center;
}
.avatar-date .avatar {
  flex: 0 0 58rpx;
  margin: 0 25rpx 0 33rpx;
  width: 58rpx;
  height: 58rpx;
}
.avatar-date .from {
  margin-right: 23rpx;
  color: #666;
  font-size: 26rpx;
}
.avatar-date .when {
  margin-right: 32rpx;
}
.avatar-date .when, .avatar-date .dateTime {
  color: #a3a3a3;
  font-size: 20rpx;
}
.article-heading {
  margin-right: 35rpx;
  margin-left: 45rpx;
  color: #4b556c;
  letter-spacing: 3px;
  font-weight: 700;
  font-size: 16px;
  line-height: 27px;
}
.tool .circle-wrap {
  float: right;
}
.tool .circle-wrap .share, .tool .circle-wrap .collection {
  width: 24px;
  height: 24px;
}
