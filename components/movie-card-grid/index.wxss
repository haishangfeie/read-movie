/* components/movie-card-grid/index.wxss */
.my-movie-card {
  display: inline-block;
  margin-bottom: 25px;
  margin-left: 38rpx;
}
.line-wrap {
  position: relative;
  margin: 0 auto 30px;
  width: 700rpx;
  text-align: center;
}
.line-wrap .line-text {
  padding: 0 20rpx;
  background: #fff;
  color: #999;
  font-size: 12px;
}
.line-wrap .line {
  position: absolute;
  top: 50%;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
}
